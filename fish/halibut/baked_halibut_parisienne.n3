@prefix e:       <http://eatdrinkfeelgood.info/2.0#> .
@prefix I:       <http://eatdrinkfeelgood.info/2.0/us-imperial#> .
@prefix M:       <http://eatdrinkfeelgood.info/2.0/metric#> .
@prefix dc:      <http://purl.org/dc/elements/1.1/> .
@prefix a:       <http://purl.org/atom/1.0/> .

<#>
         
  dc:title "Bake Halibut Parisienne"; 
  dc:alternate "Fletan a la Parisienne"; 

  e:ingredients (
     [e:amount "2"; e:measure I:pound; e:foodstuff "halibut"; ]
     [e:amount "2"; e:measure I:Tbsp; e:foodstuff "butter"; ]
     [e:amount "1/2"; e:measure I:pound; e:foodstuff "mushrooms"; e:detail "slice the caps, peel and slice the stems";]
     [e:amount "1"; e:foodstuff "onion"; e:detail "sliced";]
     [e:amount "1"; e:foodstuff "shallot"; e:detail "minced";]
     [e:foodstuff "bay leaf"; ]
     [e:amount "1/2"; e:measure I:cup; e:foodstuff "white wine"; e:detail "dry";]
     [e:amount "1/4"; e:measure I:cup; e:foodstuff "heavy cream"; ]
  );

  e:directions (
    [a:content """Dry fish with a cloth, rub it lightly with flour and season with salt and pepper.

Place it in a buttered baking dish, dot it with 2 Tbsp. butter and bake for 10 minutes in
a 350 F oven.

Surround fish with mushrooms, onion and shallot.

Add a bay leaf and wine. Cover the dish with alumimium foil, return it to the oven and
for 30 minutes more, basting occasionally.

Remove the fish to a hot platter and spread the mushroom and onions over it.

Discard the bay leaf, reduce the pan juices quickly over a hot fire if necessary and
add cream.

Taste this sauce for seasoning, reheat it and pour it over the fish.""";]
  ); 

  e:yield [
    e:makes " "; 
  ];

  dc:source [
    dc:publication "Moby Hill"; 
  ]; 

  a e:recipe ;
  dc:language "" ;
