@prefix I:       <http://eatdrinkfeelgood.info/2.0/us-imperial#> .
@prefix M:       <http://eatdrinkfeelgood.info/2.0/metric#> .
@prefix dc:      <http://purl.org/dc/elements/1.1/> .
@prefix a:       <http://purl.org/atom/1.0/> .

<#>
         
  dc:title "Scallops and Tri-colour Peppers Schaul"; 

  e:ingredients (
     [e:amount "2"; e:measure I:Tbsp; e:foodstuff "olive oil"; ]
     [e:amount "2"; e:measure "large"; e:foodstuff "green peppers"; e:detail "sliced thin";]
     [e:amount "2"; e:measure "large"; e:foodstuff "yellow peppers"; e:detail "sliced thin";]
     [e:amount "2"; e:measure "large"; e:foodstuff "red peppers"; e:detail "sliced thin";]
     [e:amount "2"; e:measure I:Tbsp; e:foodstuff "white wine"; e:detail "dry";]
     [e:amount "1/2"; e:measure I:pound; e:foodstuff "bay scallops"; e:detail "rinsed and patted dry";]
     [e:amount "2"; e:measure I:Tbsp; e:foodstuff "basil"; e:detail "minced";]
  );

  e:directions (
    [a:content """In a large skillet heat the oil over a moderately high heat until it is hot but not
smoking and in it saute the bell peppers, stirring for 2 minutes.

Add the wine and cook the mixture for 1 minute. Add the scallops, the basil and the
black pepper to taste and cook the mixture, covered, over moderate heat for 2-3 minutes, or
until the scallops are cooked through.""";]
  ); 

  dc:source [
    dc:publication "Gourmet"; 
  ]; 

  a e:recipe ;
