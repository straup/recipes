  dc:title ""; 

  e:ingredients (
     [e:amount "1 1/2 - 2"; e:measure I:pint; e:foodstuff "bay scallops"; ]
     [e:amount "3-4"; e:foodstuff "limes"; e:detail "juiced";]
     [e:amount "2"; e:measure "cloves"; e:foodstuff "garlic"; e:detail "minced";]
     [e:amount "1/3"; e:measure I:cup; e:foodstuff "olive oil"; ]
     [e:amount "2"; e:measure I:Tbsp; e:foodstuff "chives"; e:detail "minced";]
     [e:amount "2"; e:measure I:cup; e:foodstuff "arugala"; e:detail "coarsley chopped";]
     [e:amount "1"; e:measure I:pound; e:foodstuff "linguini"; ]
  );

  e:directions (
    [a:content """The night before: Rinse scallops, cover with lime juice, refrigerate. Stir
occasionally. Mix garlic and oil and let stand.

When ready to serve: Drain scallops, strain olive oil. Toss them over low heat for 2
minutes with chives, arugala, linguini, salt and pepper. Serve immediately with lemon wedges.""";]
  ); 

  e:notes (
    [a:content """The recipe states "If arugala is not available, subsitute fresh spinach. In this
case add generous pinch of dry mustard to olive oil."""; 
