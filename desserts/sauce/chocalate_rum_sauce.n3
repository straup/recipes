<#>
         
  dc:title "Chocolate sauce"; 

  e:ingredients (
     [e:amount "1"; e:measure I:cup; e:foodstuff "cream"; e:detail "whipping";]
     [e:amount "1/2"; e:measure I:cup; e:foodstuff "sugar"; ]
     [e:amount "6"; e:measure I:oz; e:foodstuff "chocolate"; e:detail "bittersweet";]
     [e:amount "2"; e:measure I:Tbsp; e:foodstuff "butter"; e:detail "unsalted";]
     [e:amount "2"; e:measure I:Tbsp; e:foodstuff "rum"; ]
  );

  e:directions (
    [a:content """Combine the cream, sugar, chocolate, butter and rum in a small saucepan and stir over
low heat until thick and smooth."""]
  ); 

  e:notes (
    [a:content """This is a modified version of the original recipe which called for amaretto instead
of rum. Need I say more?"""; 
    a:author "[[http://www.aaronstraupcope.com][asc]]"; 
    dc:date "2003-07-25T23:52:58 -0400"; ]
  );

  dc:source [
    dc:publication "The New Basic"; 
  ]; 

