# -*-n3-*-

@prefix dc:      <http://purl.org/dc/elements/1.1/> .
@prefix e:       <http://eatdrinkfeelgood.info/2.0#> .
@prefix a:       <http://purl.org/atom/1.0/> .
@prefix I:       <http://eatdrinkfeelgood.info/2.0/us-imperial#> .

<#>
  dc:title        "Thin-and-Crisp Chocolate-Chip Cookies" ;

  e:ingredients (
      [e:amount "1 3/4"; e:measure I:cup;  e:foodstuff "flour"; e:detail "all-purpose" ]
      [e:amount "3/4";   e:measure I:tsp;  e:foodstuff "baking soda" ]
      [e:amount "1";     e:measure I:Tbsp; e:foodstuff "salt"; e:detail "kosher" ]
      [e:amount "14";    e:measure I:Tbsp; e:foodstuff "butter"; e:detail "melted" ]
      [e:amount "1/2";   e:measure I:cup;  e:foodstuff "sugar"; e:detail "light brown; packed" ]
      [e:amount "1/2";   e:measure I:cup;  e:foodstuff "sugar" ]
      [e:amount "2";     e:measure I:Tbsp; e:foodstuff "corn syrup"; e:detail "syrup" ]
      [e:amount "1";     e:measure I:Tbsp; e:foodstuff "vanilla extract" ]
      [e:amount "2";     e:measure I:Tbsp; e:foodstuff "milk" ]
      [e:amount "1 1/2"; e:measure I:cup;  e:foodstuff "chocolate"; e:detail "bittersweet; chopped (peasize pieces and shavings)" ]
      [e:amount "1";     e:measure I:cup;  e:foodstuff "walnuts"; e:detail "toasted; chopped" ]
  );

  e:directions (
    [a:content """Preheat the oven to 325 {I:degrees}. Line two baking sheets
with foil. Sift together the flour, baking soda and salt.

In a mixer fitted with a paddle, cream the butter, sugars and corn syrup until
fluffy, 3 minutes. Stir in the vanilla, then the milk. Add the flour mixture all
at once and blend just until a dough forms. Fold in the chocolate and
walnuts. Chill the dough.

Roll 2-{I:Tbsp} lumps of dough into balls, the place on the baking sheet and
flatten in to 1/4-{I:inch}-thick disks spaced 2 {I:inch} apart. Chill the dough
between batches. Bake until the edges are dark golden brown, 14 to 17
minutes. Let cool slightly on the baking sheet, then transfer to a baking
rack."""]
  );

  e:yield [
    e:makes "24 cookies";
  ];

  dc:source [
    dc:publication     "The New York Times Magazine";
    dc:identifier       <http://www.nytimes.com/2006/01/22/magazine/22food.html> ;
    dc:author "Amanda Hesser" 
  ];

  a     e:recipe ;
